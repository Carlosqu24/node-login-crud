<div class="col-md-4 mx-auto">
      <div class="card">
            <div class="card-header">
                  <h3>Edit Game</h3>
            </div>
            <div class="card-body">
                  <form action="/games/edit-game/{{_id}}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                              <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}" autofocus>
                        </div>
                        <div class="form-group">
                              <input type="text" class="form-control" name="description" placeholder="Description" value="{{description}}">
                        </div>
                        
                        <input type="submit" class="btn btn-dark" value="Edit game">
                  </form>
            </div>
      </div>
</div>